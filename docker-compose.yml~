wordpress:
    image: wordpress
    links:
     - mariadb:mysql
    environment:
     - WORDPRESS_DB_PASSWORD=;kudosdatadb;2016
    ports:
     - "127.0.0.1:8081:80"
    volumes:
     - ./code:/code
     - ./html:/var/www/html
     - ./uploads.ini:/usr/local/etc/php/conf.d/uploads.ini
mariadb:
    image: mariadb
    ports:
     - "127.0.0.1:3306:3306"
    environment:
     - MYSQL_ROOT_PASSWORD=;kudosdatadb;2016
     - MYSQL_DATABASE=kudosdata
    volumes:
     - ./database:/var/lib/mysql
phpmyadmin:
  image: corbinu/docker-phpmyadmin
  links:
    - mariadb:mysql
  ports:
    - 8080:80
  environment:
    MYSQL_USERNAME: root
    MYSQL_ROOT_PASSWORD: password
